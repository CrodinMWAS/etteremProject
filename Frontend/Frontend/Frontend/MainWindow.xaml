<Window x:Class="Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized"
        SizeChanged="ResponsiveText"
        ResizeMode="NoResize">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="78.916"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Navbar-->
        <Grid Grid.ColumnSpan="3" Background="#333">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"></RowDefinition>
                <RowDefinition Height="1.5*"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>
            <!--Navbar Elements-->
            <Image Source="Images/SnackDashLogo.png" HorizontalAlignment="Left" Grid.RowSpan="4"/>
            <Label x:Name="lbl_Navbar" FontSize="30" Foreground="Orange" Content="Menu" FontFamily="pack://application:,,,/Fonts/#shrikhand" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="4"/>
            <Button x:Name="btn_login" Grid.Column="3" Content="Login" Click="btn_login_Click" Grid.Row="1"/>
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Logo with animation-->
            <Image x:Name="img_logo" Grid.RowSpan="4" Source="./Images/SnackDashLogo.png">
                <Image.RenderTransform>
                    <RotateTransform x:Name="rotateTransform" CenterX="100" CenterY="100" />
                </Image.RenderTransform>
                <Image.Triggers>
                    <EventTrigger RoutedEvent="Image.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation 
                        Storyboard.TargetName="rotateTransform" 
                        Storyboard.TargetProperty="Angle" 
                        From="-20" To="20" 
                        Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Image.Triggers>
            </Image>
            <!--Text with slogan on the right-->
            <Label x:Name="txt1" Content="Welcome to SnackDash" FontFamily="pack://application:,,,/Fonts/#shrikhand" Foreground="Red" Grid.Column="1" Grid.ColumnSpan="2" Margin="0 10 0 0" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Label x:Name="txt2" Content="Dash In, Snack Out!" FontFamily="pack://application:,,,/Fonts/#shrikhand" Foreground="Red" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txt3" TextWrapping="WrapWithOverflow" Margin="10 10 10 0" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3" Grid.Row="2" FontSize="12" HorizontalAlignment="Center">
            At SnackDash, we know your time is valuable, but that doesn’t mean you should compromise on flavor. 
            <LineBreak/>
            <LineBreak/>
            We’re all about fast, fresh, and mouth-watering snacks that hit the spot.
            <LineBreak/>
            <LineBreak/>
            Whether you’re in the mood for crispy bites, savory treats, or something sweet, we’ve got it covered—always hot and ready when you are.
            <LineBreak/>
            <LineBreak/>
            No lines, no fuss, just bold flavors that keep you coming back for more.
            </TextBlock>
            <!--Text on the bottom left-->
            <TextBlock x:Name="txt4" Foreground="Green"  TextWrapping="WrapWithOverflow" Margin="10 10 10 0" Grid.Row="5" Grid.ColumnSpan="3" FontSize="15" HorizontalAlignment="Center">
            Stop by and discover why SnackDash is the perfect choice for your on-the-go cravings. Dash in, snack out, and enjoy!
            </TextBlock>
        </Grid>
    </Grid>
</Window>
